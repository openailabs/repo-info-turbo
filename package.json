{
    "name": "repo-info-turbo",
    "private": true,
    "engines": {
        "node": ">=v18.16.1"
    },
    "packageManager": "pnpm@8.6.6",
    "scripts": {
        "prepare": "husky install",
        "branchlint": "branchlint -u -c --prefix \"$(git config --global user.name)\"",
        "build": "turbo build",
        "clean": "git clean -xdf node_modules dist .next",
        "clean:workspaces": "turbo clean",
        "db:generate": "turbo db:generate",
        "db:push": "turbo db:push db:generate",
        "dev": "FORCE_COLOR=1 turbo dev --parallel",
        "dev:web": "turbo dev --parallel --filter !@acme/expo --filter !@acme/db",
        "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .prettierignore",
        "lint": "turbo lint && manypkg check",
        "lint:fix": "turbo lint:fix && manypkg fix",
        "type-check": "turbo type-check"
    },
    "prettier": {
        "singleQuote": true
    },
    "devDependencies": {
        "husky": "^8.0.3",
        "lint-staged": "^11.2.6",
        "@branchlint/cli": "^1.0.4",
        "@branchlint/default-config": "^1.0.2",
        "@changesets/changelog-git": "^0.1.14",
        "@changesets/cli": "^2.26.1",
        "@commitlint/cli": "^17.5.0",
        "@commitlint/config-conventional": "^17.4.4",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "editorconfig": "^1.0.2",
        "nx": "15.0.2"
    },
    "dependencies": {
        "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
        "@manypkg/cli": "^0.21.0",
        "@types/prettier": "^2.7.3",
        "prettier": "^2.8.8",
        "prettier-plugin-tailwindcss": "^0.3.0",
        "turbo": "^1.10.12",
        "typescript": "^5.1.6"
    }
}
